<view>
    <layout-head _pid="{{_pid}}"></layout-head>

    <!-- wxp template -->
    <view class="content-wrapper">
        <view class="index-hd">
            <view class="container">
                <view class="button-small-wrap">
                    <wxc-button btnStyle="{{style}}" _pid="{{_pid}}">舟山
                        <wxc-icon color="#000" type="arrow-down" _pid="{{_pid}}"></wxc-icon>
                    </wxc-button>
                </view>
            </view>
        </view>

        <view class="index-bd">
            <view class="search-wrap">
                <wxc-search class="search" radius="30" mode="static" placeholder="搜索公交线路、车站、地点" bind:tap="handleShowSearchPage" _pid="{{_pid}}"></wxc-search>
            </view>
        </view>
        <wxc-tab class="tab-box" bind:tabchange="onClick" default-index="{{0}}" active-text-color="#108ee9" active-line-color="#108ee9" animate="{{true}}" _pid="{{_pid}}">
            <scroll-view scroll-y style="height: 990rpx;">
                <wxc-tab-panel class="tab-panel" wx:for="{{tabs}}" wx:for-item="tab" wx:key="{{tab.title}}" label="{{tab.title}}" _pid="{{_pid}}">
                    <view wx:for="{{tab.content}}" wx:key="item.lineName">
                        <index-card data="{{item}}" _pid="{{_pid}}"></index-card>
                    </view>
                </wxc-tab-panel>
                <wxc-loadmore is-end="{{true}}" _pid="{{_pid}}"></wxc-loadmore>
                <view class="bottom"></view>
            </scroll-view>
        </wxc-tab>
        <wxc-loading is-show="{{$loading.isShow}}" image="https://api.limonplayer.cn/loading-image.png" slip="https://api.limonplayer.cn/loading-slip.png" _pid="{{_pid}}"></wxc-loading>
    </view>

    <layout-foot _pid="{{_pid}}"></layout-foot>
</view>