.search-box-wrapper {
  margin: 35rpx;
}
.search-box {
  display: flex;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 12rpx;
  background: #333;
  border-radius: 6px;
}
.search-box icon {
  flex: 0 0 23px;
  height: 46rpx;
  width: 46rpx;
}
.search-box .box {
  flex: 1;
  font-size: 28rpx;
  height: 36rpx;
  line-height: 36rpx;
  margin: 0 10rpx;
  color: #fff;
}
.shortcut-wrapper {
  position: fixed;
  top: 150rpx;
  bottom: 0;
  width: 100%;
}
.hot-key {
  margin: 0 40rpx 40rpx 40rpx;
}
.hot-key .title {
  display: block;
  color: rgba(255,255,255,0.5);
  font-size: 28rpx;
  margin-bottom: 40rpx;
}
.hot-key .item {
  color: rgba(255,255,255,0.5);
  padding: 10rpx 20rpx;
  margin: 0 30rpx 20rpx 0;
  font-size: 28rpx;
  background: #333;
  border-radius: 12rpx;
}
.search-result {
  position: fixed;
  top: 150rpx;
  bottom: 0;
  width: 100%;
}
.suggest {
  height: 100%;
  overflow: hidden;
}
.suggest scroll-view {
  height: 100%;
  padding: 0 30px;
}
.suggest .suggest-list {
  display: flex;
  align-items: center;
  padding-bottom: 40rpx;
}
.suggest .suggest-list icon {
  width: 60rpx;
  flex: 0 0 60rpx;
}
.suggest .suggest-list text {
  flex: 1;
  font-size: 28rpx;
  color: #8c8b8b;
  overflow: hidden;
}