/**index.wxss**/
.search-box {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  padding: 0 12rpx;
  height: 40rpx;
  background: #333;
  border-radius: 12rpx;
}
.icon-search {
  font-size: 24rpx;
  color: #222;
}

.box {
  flex: 1;
  margin: 0 10rpx;
  line-height: 32rpx;
  background: #333;
  color: #fff;
  font-size: 28rpx;
}
.box::placeholder {
  color: rgba(255, 255, 255, 0.3);
}
.icon-x-circle {
  font-size: 32rpx;
  color: #222;
}